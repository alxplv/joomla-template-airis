<?xml version="1.0" encoding="utf-8"?>
<extension type="template" method="upgrade">
	<name>Airis</name>
	<!-- <name>TPL_AIRIS_XML_NAME</name> --><!-- Localization constants for NAME and AUTHOR still aren't recognized by certain administrator components as of Joomla! 3.10 -->
	<author>alxplv</author>
	<!-- <author>TPL_AIRIS_XML_AUTHOR</author> -->
	<authorEmail>polishchuk-alexander@mail.ru</authorEmail>
	<authorUrl>https://t.me/alxplv</authorUrl>
	<copyright>Copyright (C) 2016 - 2023 alxplv. All rights reserved.</copyright>
	<creationDate>2021-04-19</creationDate>
	<description>TPL_AIRIS_XML_DESCRIPTION</description>
	<inheritable>1</inheritable>
	<license>GNU GPLv3; follow http://www.gnu.org/licenses/gpl-3.0.html</license>
	<version>4.0.0</version>
	<updateservers>
		<server type="extension" name="TPL_AIRIS_XML_UPDATE_SERVER_NAME">https://alxplv.github.io/cms/joomla/templates/tpl_airis.xml</server>
	</updateservers>
	<files>
		<folder>html</folder>
		<folder>language</folder>
		<!-- <folder>user</folder> --><!-- User CSS and JS libraries directory -->
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>templateDetails.xml</filename>
	</files>
	<media folder="media" destination="templates/site/airis">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>vendor</folder>
	</media>
	<languages folder="language">
		<language tag="en-GB">en-GB/tpl_airis.ini</language>
		<language tag="en-GB">en-GB/tpl_airis.sys.ini</language>
		<language tag="ru-RU">ru-RU/tpl_airis.ini</language>
		<language tag="ru-RU">ru-RU/tpl_airis.sys.ini</language>
	</languages>
	<positions>
		<position>debug</position>
		<position>off-screen-1</position>
		<position>off-screen-2</position>
		<position>off-screen-3</position>
		<position>header-1</position>
		<position>header-2</position>
		<position>header-3</position>
		<position>header-4</position>
		<position>header-5</position>
		<position>header-6</position>
		<position>nav</position>
		<position>before-1</position>
		<position>before-2</position>
		<position>before-3</position>
		<position>before-4</position>
		<position>before-5</position>
		<position>before-6</position>
		<position>before-7</position>
		<position>before-8</position>
		<position>before-9</position>
		<position>before-10</position>
		<position>inside-top</position>
		<position>aside-left</position>
		<position>aside-right</position>
		<position>inside-bottom</position>
		<position>after-1</position>
		<position>after-2</position>
		<position>after-3</position>
		<position>after-4</position>
		<position>after-5</position>
		<position>after-6</position>
		<position>after-7</position>
		<position>after-8</position>
		<position>after-9</position>
		<position>after-10</position>
		<position>footer-1</position>
		<position>footer-2</position>
		<position>footer-3</position>
		<position>footer-4</position>
		<position>footer-5</position>
		<position>footer-6</position>
		<!-- Error positions used only in error.php -->
		<position>error-403</position>
		<position>error-404</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field
					name="loadJoomlaJquery"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_JOOMLA_JQUERY"
					description="TPL_AIRIS_CONFIG_LOAD_JOOMLA_JQUERY_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="1"
					readonly="true"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadJoomlaJqueryMigrate"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_JOOMLA_JQUERY_MIGRATE"
					description="TPL_AIRIS_CONFIG_LOAD_JOOMLA_JQUERY_MIGRATE_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="1"
					showon="loadJoomlaJquery:1"
					readonly="true"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadJoomlaBootstrap"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_JOOMLA_BOOTSTRAP"
					description="TPL_AIRIS_CONFIG_LOAD_JOOMLA_BOOTSTRAP_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadJoomlaBootstrapCssResetsFile"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_JOOMLA_BOOTSTRAP_CSS_RESETS_FILE"
					description="TPL_AIRIS_CONFIG_LOAD_JOOMLA_BOOTSTRAP_CSS_RESETS_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
					showon="loadJoomlaBootstrap:1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadUserCssFile"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_USER_CSS_FILE"
					description="TPL_AIRIS_CONFIG_LOAD_USER_CSS_FILE_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="userCssFileVersioningMode"
					type="radio"
					label="TPL_AIRIS_CONFIG_USER_CSS_FILE_VERSIONING_MODE"
					description="TPL_AIRIS_CONFIG_USER_FILE_VERSIONING_MODE_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="default"
					showon="loadUserCssFile:1"
				>
					<option value="none">JNO</option>
					<option value="default">JDEFAULT</option>
					<option value="datetime">TPL_AIRIS_CONFIG_USER_FILE_VERSIONING_MODE_OPTION_CUSTOM_DATETIME</option>
				</field>
				<field
					name="loadUserJsFile"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_USER_JS_FILE"
					description="TPL_AIRIS_CONFIG_LOAD_USER_JS_FILE_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="userJsFileVersioningMode"
					type="radio"
					label="TPL_AIRIS_CONFIG_USER_JS_FILE_VERSIONING_MODE"
					description="TPL_AIRIS_CONFIG_USER_FILE_VERSIONING_MODE_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="default"
					showon="loadUserJsFile:1"
				>
					<option value="none">JNO</option>
					<option value="default">JDEFAULT</option>
					<option value="datetime">TPL_AIRIS_CONFIG_USER_FILE_VERSIONING_MODE_OPTION_CUSTOM_DATETIME</option>
				</field>
				<field
					name="userHeadHtml"
					type="textarea"
					label="TPL_AIRIS_CONFIG_USER_HEAD_HTML"
					description="TPL_AIRIS_CONFIG_USER_HEAD_HTML_DESCRIPTION"
					rows="4"
					filter="raw"
				/>
				<field
					name="userHeadCss"
					type="textarea"
					label="TPL_AIRIS_CONFIG_USER_HEAD_CSS"
					description="TPL_AIRIS_CONFIG_USER_HEAD_CSS_DESCRIPTION"
					rows="4"
					filter="raw"
				/>
				<field
					name="userHeadJs"
					type="textarea"
					label="TPL_AIRIS_CONFIG_USER_HEAD_JS"
					description="TPL_AIRIS_CONFIG_USER_HEAD_JS_DESCRIPTION"
					rows="4"
					filter="raw"
				/>
				<field
					name="disableComponentOnDefaultPage"
					type="radio"
					label="TPL_AIRIS_CONFIG_DISABLE_COMPONENT_ON_DEFAULT_PAGE"
					description="TPL_AIRIS_CONFIG_DISABLE_COMPONENT_ON_DEFAULT_PAGE_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="useOpenGraph"
					type="radio"
					label="TPL_AIRIS_CONFIG_USE_OPEN_GRAPH"
					description="TPL_AIRIS_CONFIG_USE_OPEN_GRAPH_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="openGraphImagePath"
					type="media"
					label="TPL_AIRIS_CONFIG_OPEN_GRAPH_IMAGE_PATH"
					description="TPL_AIRIS_CONFIG_OPEN_GRAPH_IMAGE_PATH_DESCRIPTION"
					default=""
					showon="useOpenGraph:1"
				/>
				<field
					name="loadVirtuemartCssAndJsFiles"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_VIRTUEMART_CSS_AND_JS_FILES"
					description="TPL_AIRIS_CONFIG_LOAD_VIRTUEMART_CSS_AND_JS_FILES_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadVirtuemartCartCssFile"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_VIRTUEMART_CART_CSS_FILE"
					description="TPL_AIRIS_CONFIG_LOAD_VIRTUEMART_CART_CSS_FILE_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
					showon="loadVirtuemartCssAndJsFiles:1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadVirtuemartCartJsFile"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_VIRTUEMART_CART_JS_FILE"
					description="TPL_AIRIS_CONFIG_LOAD_VIRTUEMART_CART_JS_FILE_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
					showon="loadVirtuemartCssAndJsFiles:1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="showVirtuemartProductLinkContactUs"
					type="radio"
					label="TPL_AIRIS_CONFIG_VIRTUEMART_SHOW_PRODUCT_LINK_CONTACT_US"
					description="TPL_AIRIS_CONFIG_VIRTUEMART_SHOW_PRODUCT_LINK_CONTACT_US_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="replaceVirtuemartProductLinkNotifyWithContactUs"
					type="radio"
					label="TPL_AIRIS_CONFIG_VIRTUEMART_REPLACE_PRODUCT_LINK_NOTIFY_WITH_CONTACT_US"
					description="TPL_AIRIS_CONFIG_VIRTUEMART_REPLACE_PRODUCT_LINK_NOTIFY_WITH_CONTACT_US_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
					showon="showVirtuemartProductLinkContactUs:1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="virtuemartProductDescriptionShortStringLimit"
					type="number"
					label="TPL_AIRIS_CONFIG_VIRTUEMART_PRODUCT_DESCRIPTION_SHORT_STRING_LIMIT"
					description="TPL_AIRIS_CONFIG_VIRTUEMART_PRODUCT_DESCRIPTION_SHORT_STRING_LIMIT_DESCRIPTION"
					class="validate-numeric"
					default="60"
					filter="integer"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="virtuemartDisplayModeDisclaimerNotAPublicOffer"
					type="radio"
					label="TPL_AIRIS_CONFIG_VIRTUEMART_DISPLAY_DISCLAIMER_NOT_A_PUBLIC_OFFER"
					description="TPL_AIRIS_CONFIG_VIRTUEMART_DISPLAY_DISCLAIMER_NOT_A_PUBLIC_OFFER_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="none"
				>
					<option value="none">JDISABLED</option>
					<option value="catalog">TPL_AIRIS_CONFIG_VIRTUEMART_DISPLAY_DISCLAIMER_NOT_A_PUBLIC_OFFER_MODE_CATALOG_MODE_ONLY</option>
					<option value="always">TPL_AIRIS_CONFIG_VIRTUEMART_DISPLAY_DISCLAIMER_NOT_A_PUBLIC_OFFER_MODE_ALWAYS</option>
				</field>
				<field
					name="loadFancybox"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_FANCYBOX"
					description="TPL_AIRIS_CONFIG_LOAD_FANCYBOX_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
					showon="loadJoomlaJquery:1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadFlickity"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_FLICKITY"
					description="TPL_AIRIS_CONFIG_LOAD_FLICKITY_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
					showon="loadJoomlaJquery:1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadFontAwesome"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_FONTAWESOME"
					description="TPL_AIRIS_CONFIG_LOAD_FONTAWESOME_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadFontAwesomeBrands"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_FONTAWESOME_BRANDS"
					description="TPL_AIRIS_CONFIG_LOAD_FONTAWESOME_BRANDS_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
					showon="loadFontAwesome:1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadInputmask"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_INPUTMASK"
					description="TPL_AIRIS_CONFIG_LOAD_INPUTMASK_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadInputmaskFlavor"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_INPUTMASK_FLAVOR"
					description="TPL_AIRIS_CONFIG_LOAD_INPUTMASK_FLAVOR_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="jquery"
					showon="loadInputmask:1"
				>
					<option value="jquery">TPL_AIRIS_CONFIG_LOAD_INPUTMASK_OPTION_FLAVOR_JQUERY</option>
					<option value="native">TPL_AIRIS_CONFIG_LOAD_INPUTMASK_OPTION_FLAVOR_NATIVE</option>
				</field>
				<field
					name="loadInputmaskBinding"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_INPUTMASK_BINDING"
					description="TPL_AIRIS_CONFIG_LOAD_INPUTMASK_BINDING_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
					showon="loadInputmask:1[AND]loadInputmaskFlavor:jquery"
				>
					<option value="1">JENABLED</option>
					<option value="0">JDISABLED</option>
				</field>
				<field
					name="loadScrollreveal"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_SCROLLREVEAL"
					description="TPL_AIRIS_CONFIG_LOAD_SCROLLREVEAL_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadSelect2"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_SELECT2"
					description="TPL_AIRIS_CONFIG_LOAD_SELECT2_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
					showon="loadJoomlaJquery:1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadTiny-slider"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_TINY_SLIDER"
					description="TPL_AIRIS_CONFIG_LOAD_TINY_SLIDER_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="loadDoubleGisMapWidget"
					type="radio"
					label="TPL_AIRIS_CONFIG_LOAD_DOUBLEGIS_MAP_WIDGET"
					description="TPL_AIRIS_CONFIG_LOAD_DOUBLEGIS_MAP_WIDGET_DESCRIPTION"
					class="btn-group btn-group-yesno"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>